<h1>Listing steps</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Type</th>
    <th>Article</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
    <td><%= step.description %></td>
    <td><%= step.type %></td>
    <td><%= step.article_id %></td>
    <td><%= link_to 'Show', step %></td>
    <td><%= link_to 'Edit', edit_step_path(step) %></td>
    <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

