<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<div class="container">
  <div class="omb_login">
    <h2 class="omb_authTitle">Forgot your password?</h2>
    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class=>"omb_loginForm", :method => :post }) do |f| %>
            <%= devise_error_messages! %>
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <%= f.email_field :email, :autofocus => true,:class=>"form-control",:placeholder=>"Email" %>
            </div>
            <span class="help-block"></span>

            <div><%= f.submit "Send me reset password instructions",:class=>"btn btn-lg btn-primary btn-block" %></div>
        <% end %>
      </div>
    </div>
    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-3">
        <label class="checkbox">
          <a href="/users/sign_in">Sign In</a>
        </label>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p class="omb_forgotPwd">
          <a href="/users/sign_up">Sign Up</a>
        </p>
      </div>
    </div>
  </div>
</div>
